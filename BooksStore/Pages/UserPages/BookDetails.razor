@page "/book/{bookId}"
@inject IBooksService BookService

<PageTitle>Book Details | @_book?.Title</PageTitle>

<div class="card">
    <div class="card-header bg-info">
        <h2>@_book?.Title</h2>
    </div>
    <div class="card-body bg-primary-subtle">
        <p>@_book?.Description</p>
        <ul>
            <li>Author: @_book?.AuthorName</li>
            <li>Pages: @_book?.PagesCount</li>
            <li>Price: $@_book?.Price</li>
            <li>Publishing Date: @_book?.PublishingDate</li>
        </ul>
    </div>
    <div class="card-footer">
        <a class="btn btn-warning" href=" ">Home</a>
    </div>
</div>



@code {
    [Parameter]
    public string? BookId { get; set; }
    private Book? _book = null;

    protected async override Task OnInitializedAsync(){
        _book = await BookService.GetBookByIdAsync(BookId);
    }
}
